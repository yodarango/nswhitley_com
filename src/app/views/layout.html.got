<!DOCTYPE html>
<html lang="en">
<head>
    {{ template "app/views/meta.html.got" . }}
    {{ script "app" }}
</head>
<body>
    {{ if .warning }}
        <div class="warning">{{.warning}}</div>
    {{ end }}
  
    <header>----------------------------Header -----------------------</header>

    <main class="main-content {{ if .currentUser.Admin}}main-content-admin{{end}}">
        <section class="navigation-container">
            {{ if .currentUser.Admin }}
                {{ template "app/views/admin_nav.html.got" . }}
            {{ else }}
                {{ template "app/views/public_nav.html.got" . }}
            {{end}}
        </section>

        <section class="main-content-container">
            {{ .content }}
        </section>
    </main>

    <footer>
    {{ template "app/views/footer.html.got" . }}
    </footer>

</body>
</html>