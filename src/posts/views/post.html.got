<div class="blog-post" data-post-name="{{.Name}}" data-post-text="{{.Summary}}">
    <div class="d-flex align-items-start justify-content-between gap-4">
        <img src="/uploads{{.Thumbnail}}" alt="{{.Name}}" class="blog-thumbnail flex-shrink-0" /> 
        <div class="w-100">
            <a href="{{.ShowURL}}">
                <h3>{{ .Name }}</h3>
            </a>
            <div class="text">
                {{ sanitize .Summary }}
            </div>
        </div>
    </div>
</div>
